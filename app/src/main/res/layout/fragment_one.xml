<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/top1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="2dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                        android:id="@+id/lu1"
                            android:layout_marginBottom="2dp"
                        android:layout_weight="0.35"
                        android:background="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lu2"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="0.65"
                            android:background="@color/green"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"

                        android:layout_width="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/lu3"
                            android:orientation="vertical"
                            android:layout_weight="0.5"
                            android:layout_marginRight="2dp"
                            android:background="@color/red"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lu4"
                            android:orientation="vertical"
                            android:layout_weight="0.5"
                            android:background="@color/orange"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lu5"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@color/blue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="2dp"

                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="2"

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="0.65"
                        android:layout_marginBottom="2dp"
                        android:id="@+id/lu6"
                        android:orientation="vertical"
                        android:background="@color/orange"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="2dp"
                        android:id="@+id/lu7"
                        android:orientation="vertical"
                        android:layout_weight="0.35"
                        android:background="@color/blue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginBottom="2dp"
                        android:id="@+id/lu8"
                        android:orientation="vertical"
                        android:layout_weight="2"
                        android:background="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lu9"
                        android:layout_marginBottom="2dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@color/green"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lu10"
                        android:orientation="vertical"
                        android:layout_weight="2"
                        android:background="@color/purple"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
